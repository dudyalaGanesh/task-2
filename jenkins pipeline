pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "dudyalaganesh/nodejs-demo-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/dudyalaganesh/nodejs-demo-app.git'
            }
        }

        stage('Install & Test') {
            agent {
                docker { image 'node:18' }
            }
            steps {
                sh 'npm install'
                sh 'npm test || echo "No tests found, skipping..."'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:latest ."
            }
        }

        stage('Push to DockerHub') {
            steps {
                withDockerRegistry([ credentialsId: 'dockerhub-credentials', url: '' ]) {
                    sh "docker push ${DOCKER_IMAGE}:latest"
                }
            }
        }
        
        stage('run'){
            steps{
                sh 'docker run -itd --name nodejscontainer -p 3000:3000 ${DOCKER_IMAGE}:latest'
            }
        }
    }
}
